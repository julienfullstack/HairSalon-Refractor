@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>
<div class="col">

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name, new { @class = "form-label"})
        @Html.TextBoxFor(model => model.Name,  new { @class = "form-control"})
        <br>
        <!-- @Html.LabelFor(model => model.Stylist)
        @Html.DropDownListFor(model => model.StylistId, (SelectList)ViewBag.StylistId, "Select a Stylist", new { @class = "form-control" }) -->
        <br><br>
        <input type="submit" value="Add new Client" class="btn btn-primary btn-sm" />
    }
    <br>
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;"}) </p>
<p>@Html.ActionLink("Show all Clients", "Index")</p>
<p>@Html.ActionLink("Back to Home Page", "Index", "Home")</p>

</div>


