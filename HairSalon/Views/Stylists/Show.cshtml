@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models


@if (Model.JoinEntities != null && Model.JoinEntities.Any())
{
    <h2>Clients for @Html.DisplayFor(model => model.Name):</h2>
    foreach (ClientStylist joinEntity in Model.JoinEntities)
    {
        <p>Client Name: @joinEntity.Client.Name</p>
    }
    
}
else
{
    <p>No clients available for this stylist.</p>
}

@Html.ActionLink("Delete", "Delete", new { id = Model.StylistId })

<p>@Html.ActionLink("Add a Client to stylist", "AddClient", new { id = Model.StylistId })</p>

